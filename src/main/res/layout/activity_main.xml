<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40C6D8"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="right"
        android:maxLength="20"
        android:hint="0"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="50dp" />


    <TextView
        android:id="@+id/operator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="right"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="log"
            android:background="#40C6D8"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="italic"
            android:onClick="log"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#40C6D8"
            android:text="ln"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="italic"
            android:onClick="ln"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#40C6D8"
            android:text="√"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="italic"
            android:onClick="root"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_weight="0.7"
            android:background="@drawable/ic_baseline_backspace_15"
            android:onClick="clear"
            />


    </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="#40C6D8"
            android:weightSum="3"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#40C6D8"
                android:layout_weight="1"
                android:text="sin"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="italic"
                android:onClick="sin"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#40C6D8"
                android:text="cos"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="italic"
                android:onClick="cos"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#40C6D8"
                android:layout_weight="1"
                android:text="tan"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="italic"
                android:onClick="tan"/>

            </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#40C6D8"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#40C6D8"
            android:layout_weight="1"
            android:text="1"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="italic"
            android:onClick="one"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#40C6D8"
            android:layout_weight="1"
            android:text="2"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="italic"
            android:onClick="two"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#40C6D8"
            android:text="3"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="italic"
            android:onClick="three"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#40C6D8"
            android:layout_weight="1"
            android:text="+"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:textStyle="italic"
            android:onClick="Add"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#40C6D8"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#40C6D8"
            android:layout_weight="1"
            android:text="4"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="italic"
            android:onClick="four"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#40C6D8"
            android:text="5"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="italic"
            android:onClick="five"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#40C6D8"
            android:layout_weight="1"
            android:text="6"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="italic"
            android:onClick="six"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#40C6D8"
            android:layout_weight="1"
            android:text="-"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:textStyle="italic"
            android:onClick="Sub"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#40C6D8"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#40C6D8"
            android:layout_weight="1"
            android:text="7"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="italic"
            android:onClick="seven"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#40C6D8"
            android:text="8"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="italic"
            android:onClick="eight"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#40C6D8"
            android:layout_weight="1"
            android:text="9"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="italic"
            android:onClick="Nine"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#40C6D8"
            android:layout_weight="1"
            android:text="*"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:textStyle="italic"
            android:onClick="Multiply"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#40C6D8"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#40C6D8"
            android:layout_weight="1"
            android:text="C"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:textStyle="italic"
            android:onClick="allclear"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#40C6D8"
            android:layout_weight="1"
            android:text="π"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="italic"
            android:onClick="Pi"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#40C6D8"
            android:text="0"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:textStyle="italic"
            android:onClick="Zero"/>


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#40C6D8"
            android:layout_weight="1"
            android:text="/"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:textStyle="bold"
            android:onClick="Divition"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#40C6D8"
        android:weightSum="3"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#40C6D8"
            android:layout_weight="1"
            android:text="."
            android:textAllCaps="false"
            android:textSize="40sp"
            android:textStyle="bold"
            android:onClick="Point"/>


    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#40C6D8"
        android:layout_weight="1"
        android:text="="
        android:textAllCaps="false"
        android:textSize="40sp"
        android:textStyle="italic"
        android:onClick="Equal"/>


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#40C6D8"
            android:layout_weight="1"
            android:gravity="center"
            android:text="!"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:textStyle="bold"
            android:onClick="factorial"/>

    </LinearLayout>




</LinearLayout>
